---
import { ThemesToggle } from "@/core/composites/themes-toggle";
import { cn } from "@/core/lib/cn";
import { Card } from "@/core/ui/card";
import type { ComponentPropsWithRef } from "react";

interface Props extends ComponentPropsWithRef<typeof Card> {}

const { className, ...props } = Astro.props;
---

<Card
  className={cn("flex flex-col rounded-lg shadow-none", className)}
  {...props}
>
  <ThemesToggle
    client:load
    className="border-1 border-t-accent! border-r-accent! border-b-border! border-l-border! bg-accent! absolute right-1 top-1 rounded-lg rounded-br-none rounded-tl-none transition-none"
    variant="outline"
  />
  <slot />
</Card>
